{
  "manifest_version": 3,
  "name": "Text Overlay Finder",
  "version": "1.0",
  "description": "Finds text on a webpage and places an overlay on it",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
} 